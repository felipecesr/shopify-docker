<!-- /snippets/blog-sidebar.liquid -->
{% comment %}
  Recent blog posts
{% endcomment %}
<h4 class="">{{ 'blogs.sidebar.recent_articles' | t }}</h4>
<ul class="no-bullets">
  {% for article in blogs[blog.handle].articles limit:6 %}
    <li>
      <a href="{{ article.url }}" class="feature-copy">{{ article.title }}</a>
      <br>
      <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>
    </li>
  {% endfor %}
</ul>

{% comment %}
  Blog tags
{% endcomment %}
{% if blog.all_tags.size > 0 %}
  <h4 class="tags">{{ 'blogs.sidebar.categories' | t }}</h4>
  <ul class="no-bullets tags-list">
    {% if current_tags  %}
      <li><a href='{{ blogs[blog.handle].url }}'>{{ 'blogs.sidebar.all_tags' | t }}</a></li>
    {% else %}
      <li>{{ 'blogs.sidebar.all_tags' | t }}</li>
    {% endif %}
    {% for tag in blog.all_tags %}
      {% if current_tags contains tag %}
      <li>{{ tag }}</li>
      {% else %}
      <li>{{ tag | link_to_tag: tag }}</li>
      {% endif %}
    {% endfor %}
  </ul>
{% endif %}

<p class="rss-link">
  <a href="{{ shop.url }}{{ blogs[blog.handle].url }}.atom" target="_blank">{{ 'blogs.sidebar.rss' | t }}</a>
</p>
