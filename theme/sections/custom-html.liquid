<!-- /sections/custom-html.liquid -->


<section class="custom-content {% if section.settings.full_bleed and section.settings.title == blank %}custom-content--full-bleed{% endif %}" data-section-type="custom-content" data-section-id="{{ section.id }}">
   <div class="{% unless section.settings.full_bleed %}wrapper{% endunless %}">

     {% if section.settings.title != blank %}
     <h2 class="section_title">
         {{ section.settings.title | escape }}
       <div class="border"></div>
     </h2>
     {% endif %}

     <div class="grid section-content{% if section.settings.full_bleed %} grid--full{% endif %}">
       <div class="grid__item one-whole">
           {{ section.settings.custom_html }}
       </div>
     </div>
   </div>
</section>

{% schema %}
{
  "name": "Custom HTML",
  "settings": [
    {
     "type":      "text",
     "id":        "title",
     "label":     "Heading",
     "default":   "Heading"
    },
    {
      "id": "custom_html",
      "type": "html",
      "label": "HTML",
      "default": "<p>Embed custom HTML code.</p>"
    },
    {
      "type": "checkbox",
      "id": "full_bleed",
      "label": "Full bleed"
    }
  ],
  "presets": [
      {
        "name": "Custom HTML",
        "category": "Advanced layout"
      }
    ]
}
{% endschema %}